@model IEnumerable<SIMHUKDIS.Models.clsSuratMasuk>

@{
    ViewBag.Title = "Usul Hukuman Disiplin";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!-- Default Basic Forms Start -->
<div class="pd-20 card-box mb-30">
    <form>
        <div class="form-group row" style="vertical-align:central;">
            <label class="col-sm-12 col-md-2 col-form-label">Status</label>
            <div class="col-md-3">
                @Html.DropDownList("StatusProses", new List<SelectListItem>
                                                                    {
                           new SelectListItem{ Text = "Semua", Value = "2" },
                                                                        new SelectListItem{ Text = "Belum di Proses", Value = "0" },
                                                                        new SelectListItem{ Text = "Sudah di Proses", Value = "1" }

                                                                    }, htmlAttributes: new { @class = "custom-select col-12", @id = "StatusProses" }
                                                                )
                @Html.ValidationMessage("StatusProses", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-md-2 col-form-label">Date</label>
            <div class="col-md-3">
                <input class="form-control date-picker" data-date-format="dd-MM-yyyy"
                       placeholder="Select Date"
                       type="text" id="TanggalSuratFrom" value="@string.Format("{0:dd-MM-yyyy}", ViewBag.DateFrom)" />
            </div>

            <label class="col-form-label">s/d</label>
            <div class="col-md-3">
                <input class="form-control date-picker"
                       placeholder="Select Date"
                       type="text" id="TanggalSuratTo" value="@string.Format("{0:dd-MM-yyyy}", ViewBag.DateTo)" />
            </div>
            <div class="col-md-3">
                <button type="button" class="btn btn-primary" id="GridLoad">Cari</button>
            </div>
            @*<div class="col-md-3">
                <button type="button" class="btn btn-primary" id="GridLoad">Cari</button>
            </div>*@
        </div>

    </form>
</div>
<!-- Default Basic Forms End -->
<!-- Export Datatable start -->
<div class="card-box mb-30">
    <div class="pd-20">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Tambah Data
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="@Url.Action("Create", "SuratMasuk")">Indisipliner</a>
                <a class="dropdown-item" href="@Url.Action("CreateTindakPidana", "SuratMasuk")">Tindak Pidana</a>
            </div>
            <a type="button" class="btn btn-primary" href="@Url.Action("CreateSPTJM", "SuratMasuk")">Buat SPTJM</a>
        </div>
        
    </div>
    <div class="pb-20">
        <table class="table hover data-table-export">
            <thead class="table table-primary" style="white-space:nowrap;">
                <tr>
                    <th class="table-plus datatable-nosort">Aksi</th>
                    <th>No Surat</th>
                    <th>Perihal</th>
                    <th>Satuan Kerja</th>
                    <th>Unit Kerja</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {

                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            @if (@ViewBag.UserID == item.CreateUser && item.Status == 0)
                            {
                                <td class="table-plus">
                                    @if (item.UsulStatus == "1")
                                    {
                                        @Html.ActionLink("Ubah", "Edit", new { ID = item.ID, KODE_SATUAN_KERJA = item.KODE_SATUAN_KERJA, Kode_Unit_Kerja = item.Kode_Unit_Kerja })
                                    }
                                    @if (item.UsulStatus == "2")
                                    {
                                        @Html.ActionLink("Ubah", "EditTindakPidana", new { ID = item.ID, KODE_SATUAN_KERJA = item.KODE_SATUAN_KERJA, Kode_Unit_Kerja = item.Kode_Unit_Kerja })
                                    }

                                    <br />
                                    <a href="#" onclick="Hapus('@item.ID')">Hapus</a>
                                    <br />
                                    <a href="#" onclick="Proses('@item.ID')">Proses</a>
                                </td>
                            }
                            else
                            {
                                <td class="table-plus">
                                    Ubah
                                    <br />
                                    Hapus
                                    <br />
                                    Proses
                                </td>
                            }
                            <td>@Html.ActionLink(item.NoSurat, "Details", new { ID = item.ID })</td>
                            <td>@Html.DisplayFor(modelItem => item.perihal)</td>
                            <td>@Html.DisplayFor(modelItem => item.SATUAN_KERJA)</td>
                            <td>@Html.DisplayFor(modelItem => item.Unit_Kerja)</td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="DeleteSM" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Apakah Anda yakin untuk menghapus data ini ?</div>
            <div class="modal-footer">
                <label id="ID" name="ID"></label>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <input class="btn btn-primary" onclick="HapusDataSM()" value="Hapus" type="button" />
            </div>
        </div>
    </div>
</div>
<!-- Export Datatable End -->
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#StatusProses").val(2);
        var date1 = $('#TanggalSuratFrom').datepicker({ dateFormat: 'dd-mm-yy' }).val();
        var date2 = $('#TanggalSuratTo').datepicker({ dateFormat: 'dd-mm-yy' }).val();
    });
     $("#GridLoad").click(function () {
         window.location = '@Url.Action("Index", "SuratMasuk")?Status=' + $("#StatusProses").val() + '&DateFrom=' + $("#TanggalSuratFrom").val() + '&DateTo=' + $("#TanggalSuratTo").val();
                setTimeout(function () {
                    waitingDialog.hide();
                }, 1000);
        });
    function Proses(ID) {
        $('#ID').val(ID);
        $('#ProsesSM').modal('show');
    }
    function Hapus(ID) {
        $('#ID').val(ID);
        $('#DeleteSM').modal('show');
    }
    function KirimData() {
        var dpObj = {
            ID: $('#ID').val()
            };
        $.ajax({
            url: "/SuratMasuk/Proses",
            data: JSON.stringify(dpObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.toString() == "Success") {
                    swal.fire({
                        title: "Kirim Data Surat Masuk Berhasil!",
                        icon: "success",
                        button: "Ok",
                        timer: 3000,
                    });
                    window.location = '@Url.Action("Index", "SuratMasuk")?Status=' + $("#StatusProses").val() + '&DateFrom=' + $("#TanggalSuratFrom").val() + '&DateTo=' + $("#TanggalSuratTo").val();
                }
                else {
                    swal.fire({
                        title: result.toString(),
                        icon: "error",
                        button: "Ok",
                        timer: 3000,
                    });
                }
            },
            error: function (errormessage) {
                swal.fire({
                    title: errormessage.responseText,
                    icon: "error",
                    button: "Ok",
                    timer: 3000,
                });
            }
        });
    }

    function HapusDataSM() {
        var dpObj = {
            ID: $('#ID').val()
            };
        $.ajax({
            url: "/SuratMasuk/Delete",
            data: JSON.stringify(dpObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.toString() == "Success") {
                    swal.fire({
                        title: "Hapus Data Surat Masuk Berhasil!",
                        icon: "success",
                        button: "Ok",
                        timer: 3000,
                    });
                    window.location = '@Url.Action("Index", "SuratMasuk")?Status=' + $("#StatusProses").val() + '&DateFrom=' + $("#TanggalSuratFrom").val() + '&DateTo=' + $("#TanggalSuratTo").val();
                }
                else {
                    swal.fire({
                        title: result.toString(),
                        icon: "error",
                        button: "Ok",
                        timer: 3000,
                    });
                }
            },
            error: function (errormessage) {
                swal.fire({
                    title: errormessage.responseText,
                    icon: "error",
                    button: "Ok",
                    timer: 3000,
                });
            }
        });
    }
</script>
