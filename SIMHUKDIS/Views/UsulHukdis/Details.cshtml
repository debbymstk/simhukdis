<script type="text/javascript">
    $(document).ready(function () {
    });
    $("#DownloadWord").click(function () {
        var InputID = '@ViewBag.ID';
        var dpObj = {
            ID: $('#ID').val(),
            NoSurat: $('#NoSurat').val(),
            AsalSurat: $('#AsalSurat').val(),
            TanggalSurat: $('#TanggalSurat').val(),
            perihal: $('#perihal').val(),
            SATUAN_KERJA: $('#SATUAN_KERJA').val(),
            LampiranSurat1: $('#LampiranSurat1').val(),
            LampiranSurat2: $('#LampiranSurat2').val(),
            LampiranSurat3: $('#LampiranSurat3').val(),
            LampiranSurat4: $('#LampiranSurat4').val(),
            LampiranSurat5: $('#LampiranSurat5').val(),
            LampiranSurat6: $('#LampiranSurat6').val(),
            LampiranSurat_LHA: $('#LampiranSurat_LHA').val(),
            DisposisiBy1: $('#DisposisiBy1').val(),
            DisposisiBy2: $('#DisposisiBy2').val(),
            DisposisiBy3: $('#DisposisiBy3').val(),
            DisposisiDate1: $('#DisposisiDate1').val(),
            DisposisiDate2: $('#DisposisiDate2').val(),
            DisposisiDate3: $('#DisposisiDate3').val(),
            DisposisiStatus1: $('#DisposisiStatus1').val(),
            DisposisiStatus2: $('#DisposisiStatus2').val(),
            DisposisiStatus3: $('#DisposisiStatus3').val(),
            Catatan1: $('#Catatan1').val(),
            Catatan2: $('#Catatan2').val(),
            Catatan3: $('#Catatan3').val()
        };
        $.ajax({
            url: "/UsulHukdis/GenerateWord",
            data: JSON.stringify(dpObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.toString() == "Success") {
                    Swal.fire({
                        icon: 'success',
                        title: 'Generate berhasil !',
                        showConfirmButton: false,
                        timer: 3000
                    })
                    window.location = '@Url.Action("Details", "UsulHukdis")?ID=' + InputID;
                }
                else {
                    Swal.fire({
                        icon: 'error',
                        title: result.toString(),
                        showConfirmButton: false,
                        timer: 3000
                    })
                }
            },
            error: function (errormessage) {
                Swal.fire({
                    icon: 'error',
                    title: result.toString(),
                    showConfirmButton: false,
                    timer: 3000
                })
                window.location = '@Url.Action("Details", "UsulHukdis")?ID=' + InputID;
            }
        });
    });
</script>