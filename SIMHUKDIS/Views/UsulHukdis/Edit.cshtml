                                                                        }, htmlAttributes: new { @class = "form-control", @id = "isLampiranSurat6", @onchange = "LampiranPP()" }
                                                      )
                    @*@Html.EditorFor(model => model.StatusAdmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage(model => model.StatusAdmin, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group row" id="LampiranSuratPP" name="LampiranSuratPP">
                <div class="col">
                    <label class="control-label ">Lampiran Putusan Pengadilan</label>
                    @Html.TextBox("LampiranSurat6", "", new { @type = "file", @id = "LampiranSurat6", @class = "form-control form-control-user", disabled = true })
                    @Html.ValidationMessage("LampiranSurat6", "", new { @class = "text-danger" })
                    @if (Model.LampiranSurat6 == "")
                    {
                    }
                    else
                    {
                        <div style="width:5px;">
                            <label></label>
                        </div>
                        @Html.ActionLink(Model.LampiranSurat6, "DownloadFile6", new { fileName = Model.LampiranSurat6, @class = "form-control" })
