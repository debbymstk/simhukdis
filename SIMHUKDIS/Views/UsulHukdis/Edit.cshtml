            $("#LampiranSurat6").prop('disabled', true);
            $("#LHA").hide();
            $("#LampiranSurat_LHA").prop('required', false);
        }
        if ($(LampiranSurat6).val() == "") {
            $("#isLampiranSurat6").val(0);
            $("#LampiranSurat6").prop('disabled', true);
        }
        else
        {
            $("#isLampiranSurat6").val(1);
            $("#LampiranSurat6").prop('disabled', false);
        }
    });
