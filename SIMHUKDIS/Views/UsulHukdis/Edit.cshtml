            autoclose: true,
            calendarWeeks: true,
            clearBtn: true,
            disableTouchKeyboard: true
        });
        var SatuanKerja = '@ViewBag.SatuanKerja';
        if (SatuanKerja == 143) {
            $("#KODE_SATUAN_KERJA").prop('disabled', false);
            $("#LampiranSP").show();
            $("#LHA").show();
            $("#Lainnya").show();
            //$("#LampiranSurat_LHA").prop('required', true);
