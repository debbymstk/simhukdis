<script type="text/javascript">
    $(document).ready(function () {
    });
    $("#DownloadWord").click(function () {
        var InputID = '@ViewBag.ID';
        var dpObj = {
            ID: $('#ID').val(),
            NoSurat: $('#NoSurat').val(),
            AsalSurat: $('#AsalSurat').val(),
            TanggalSurat: $('#TanggalSurat').val(),
            perihal: $('#perihal').val(),
