@model SIMHUKDIS.Models.HasilSidangDtl
@{
    ViewBag.Title = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="card-box mb-30">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DATA HASIL SIDANG</h6>
    </div>
    @using (Html.BeginForm("KirimData", "HasilSidang", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form>
            <div class="card-body">
                <div class="form-group row">

                    <div class="col">
                        <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">NIP</label>
                        @Html.TextBoxFor(Model => Model.NIP, "", new { @id = "NIP", @class = "form-control", required = "required", @readonly = "True" })
                        @Html.ValidationMessage("NIP", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">NAMA LENGKAP</label>
                        @Html.TextBoxFor(Model => Model.FullName, "", new { @id = "FullName", @class = "form-control", required = "required", @readonly = "True" })
                        @Html.ValidationMessage("FullName", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col">
                        <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">NOMOR SK</label>
                        @Html.TextBoxFor(Model => Model.NO_SK, "", new { @id = "NO_SK", @class = "form-control", required = "required" })
                        @Html.ValidationMessage("NO_SK", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">TANGGAL SK</label>
                        @Html.TextBoxFor(Model => Model.Tanggal_SK, "", new { @id = "Tanggal_SK", @class = "form-control", required = "Tanggal_SK" })
                        @Html.ValidationMessage("Tanggal_SK", "", new { @class = "text-danger" })
                    </div>
                    <div class="col">
                        <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">FILE SK</label>
                        @Html.TextBoxFor(Model => Model.FILE_SK, "", new { @type = "file", @id = "FILE_SK", @class = "form-control", accept = "application/pdf" })
                        @Html.ValidationMessageFor(model => model.FILE_SK, "Max : 1MB & Format File : PDF", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">KETERANGAN</label>
                        @Html.TextAreaFor(Model => Model.Keterangan_SK, new { @id = "Keterangan_SK", @class = "form-control", rows = 5 })
                        @Html.ValidationMessage("Keterangan_SK", "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="card-box mb-30">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">PENYAMPAIAN HASIL SIDANG KE SATKER</h6>
                </div>
                <div class="card-body">
                    <div class="form-group row" style="display:none;">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">ID</label>
                            @Html.TextBoxFor(Model => Model.ID, "", new { @id = "ID", @class = "form-control", required = "required" })
                            @Html.ValidationMessage("ID", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">TANGGAL PENYAMPAIAN</label>
                            @Html.TextBoxFor(Model => Model.Tanggal_Penyampaian_Ke_Satker, "", new { @id = "Tanggal_Penyampaian_Ke_Satker", @class = "form-control", required = "Tanggal_Penyampaian_Ke_Satker" })
                            @Html.ValidationMessage("Tanggal_Penyampaian_Ke_Satker", "", new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">PENERIMA</label>
                            @Html.TextBoxFor(Model => Model.Penerima_Satker, "", new { @id = "Penerima_Satker", @class = "form-control" })
                            @Html.ValidationMessage("Penerima_Satker", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">BERITA ACARA PENERIMAAN</label>
                            @Html.TextBoxFor(Model => Model.BAP_Satker, "", new { @type = "file", @id = "BAP_Satker", @class = "form-control", accept = "application/pdf" })
                            @Html.ValidationMessageFor(model => model.BAP_Satker, "Max : 1MB & Format File : PDF", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">KETERANGAN</label>
                            @Html.TextAreaFor(Model => Model.Keterangan_Satker, new { @id = "Keterangan_Satker", @class = "form-control", rows = 5 })
                            @Html.ValidationMessage("Keterangan_Satker", "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-box mb-30">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">PENYAMPAIAN HASIL SIDANG KE YBS</h6>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">TANGGAL PENYAMPAIAN YBS</label>
                            @Html.TextBoxFor(Model => Model.Tanggal_Penyampaian_Ke_YBS, "", new { @id = "Tanggal_Penyampaian_Ke_YBS", @class = "form-control", required = "Tanggal_Penyampaian_Ke_YBS" })
                            @Html.ValidationMessage("Tanggal_Penyampaian_Ke_YBS", "", new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">PENERIMA</label>
                            @Html.TextBoxFor(Model => Model.Penerima_YBS, "", new { @id = "Penerima_YBS", @class = "form-control" })
                            @Html.ValidationMessage("Penerima_YBS", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">BERITA ACARA PENERIMAAN</label>
                            @Html.TextBoxFor(Model => Model.BAP_Penerima, "", new { @type = "file", @id = "BAP_Penerima", @class = "form-control", accept = "application/pdf" })
                            @Html.ValidationMessageFor(model => model.BAP_Penerima, "Max : 1MB & Format File : PDF", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label style="font-weight: bold;color:cornflowerblue;" class="control-label ">KETERANGAN</label>
                            @Html.TextAreaFor(Model => Model.Keterangan_Penerima, new { @id = "Keterangan_Penerima", @class = "form-control", rows = 5 })
                            @Html.ValidationMessage("Keterangan_Penerima", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Simpan" class="btn btn-primary" style="width:100px;" />
                            @*<button type="button" id="InsertData" class="btn btn-success" style="background-color:teal;"></button> | @Html.ActionLink("Back to List", "Index")*@
                        </div>
                    </div>
                </div>
        </form>
    }
</div>

<script src="/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#Tanggal_Penyampaian_Ke_Satker").datepicker({
                setDate: new Date(),
                format: 'dd-mm-yyyy',
                autoclose: true,
                calendarWeeks: true,
                clearBtn: true,
                disableTouchKeyboard: true
            })
        });
        $(function () {
            $("#Tanggal_SK").datepicker({
                setDate: new Date(),
                format: 'dd-mm-yyyy',
                autoclose: true,
                calendarWeeks: true,
                clearBtn: true,
                disableTouchKeyboard: true
            })
        });
        $(function () {
            $("#Tanggal_Penyampaian_Ke_YBS").datepicker({
                setDate: new Date(),
                format: 'dd-mm-yyyy',
                autoclose: true,
                calendarWeeks: true,
                clearBtn: true,
                disableTouchKeyboard: true
            })
        });
    });
    $('#FILE_SK').on('change', function () {
        for (var i = 0; i < $(this).get(0).files.length; ++i) {
            var file1 = $(this).get(0).files[i].size;
            if (file1) {
                var file_size = $(this).get(0).files[i].size;
                if (file_size > 1000000) {
                    Swal.fire({
                        icon: 'error',
                        title: "File lebih dari 1MB!",
                        showConfirmButton: false,
                        timer: 3000
                    })
                    $('#FILE_SK').val('');
                } else {

                }
            }
        }
    });
