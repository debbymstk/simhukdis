            </div>
            <div class="form-group row" >
                <div class="col">
                    <label class="control-label">J.	JABATAN PEJABAT PEMBUAT KEWENANGAN</label>
                    <textarea class="form-control" id="JABATAN_PEJABAT_TTD" name="JABATAN_PEJABAT_TTD"></textarea>
                    @Html.ValidationMessage("JABATAN_PEJABAT_TTD", "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="form-group row">
            <div class="col">
