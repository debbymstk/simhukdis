@model SIMHUKDIS.Models.clsPraDPK

@{
    ViewBag.Title = "Edit";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div class="card-box mb-30">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Data Pra Sidang Dewan Pertimbangan Kepegawaian</h6>
    </div>
        <div class="card-body">
            @using (Html.BeginForm("Proses", "PraDPK", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>
                @Html.HiddenFor(model => model.ID)

                <div class="form-group row">
                    <div class="col">
                        @Html.LabelFor(model => model.NIP, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.NIP, new { htmlAttributes = new { @class = "form-control", @readonly = "True" } })
                        @Html.ValidationMessageFor(model => model.NIP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col">
                        @Html.LabelFor(model => model.Catatan, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Catatan, new { @type = "text", @id = "Catatan", @class = "form-control", required = "required", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Catatan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col">
                        @Html.Label("Tanggal Pra Sidang DPK", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Tanggal_Sidang, "{0:dd MM yyyy}", new { @type = "text", @id = "Tanggal_Sidang", @class = "form-control date-picker", required = "required" })
                        @*@Html.TextBox(model => model.Tanggal_Sidang, "{0:dd MM yyyy}", new { htmlAttributes = new { @class = "form-control date-picker", @id = "Tanggal_Sidang" } })*@
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col">
                        @Html.Label("Jenis Pelanggaran", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Kode_JenisPelanggaran, ViewBag.JenisPelanggaran as SelectList, new { @class = "form-control", required = "required", @id = "Kode_JenisPelanggaran" })
                        @Html.ValidationMessageFor(model => model.Kode_JenisPelanggaran, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Simpan" class="btn btn-primary"  />
                    </div>
                </div>
            </form>
            }
    </div>
</div>
<script src="/Scripts/jquery-3.6.0.min.js"></script>

