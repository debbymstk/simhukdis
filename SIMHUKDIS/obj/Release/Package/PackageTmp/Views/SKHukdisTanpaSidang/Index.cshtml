    }
    function HapusDataSK() {
        var dpObj = {
            ID: $('#ID').val(),
            NIP: $('#NIPx').val()
            };
        $.ajax({
            url: "/SKHukdisTanpaSidang/Delete",
            data: JSON.stringify(dpObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.toString() == "Success") {
                    swal.fire({
                        title: "Hapus Data Usul Berhasil!",
                        icon: "success",
