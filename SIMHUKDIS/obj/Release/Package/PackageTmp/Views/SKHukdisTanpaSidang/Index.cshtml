                        timer: 3000,
                    });
                    window.location = '@Url.Action("Index", "SKHukdisTanpaSidang")';
                }
                else {
                    swal.fire({
                        title: result.toString(),
                        icon: "error",
                        button: "Ok",
                        timer: 3000,
                    });
                }
            },
            error: function (errormessage) {
                swal.fire({
                    title: errormessage.responseText,
                    icon: "error",
                    button: "Ok",
                    timer: 3000,
                });
            }
        });
    }
    function KirimSurat() {
        var InputID = '@ViewBag.ID';
        var fileUpload = $("#FileSKS").get(0);
        var files = fileUpload.files;

        // Create FormData object
        var fileData = new FormData();

        // Looping over all files and add it to FormData object
        for (var i = 0; i < files.length; i++) {
            fileData.append(files[i].name, files[i]);
        }
        $.ajax({
            url: '/HasilSidang/UploadFiles',
            type: "POST",
            contentType: false, // Not to set any content header
            processData: false, // Not to process data
            data: fileData,
            success: function (result) {
                var dpObj = {
                    ID: $('#IDs').val(),
                    NIP: $('#NIPs').val(),
                    NoSurat: $('#NoSurat').val(),
                    TanggalSurat: $('#TanggalSurat').val(),
                    FileSKS: result
                };
                $.ajax({
                    url: "/HasilSidang/KirimSurat",
                    data: JSON.stringify(dpObj),
                    type: "POST",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result.toString() == "Success") {
                            Swal.fire({
                                icon: 'success',
                                title: 'Proses berhasil !',
                                showConfirmButton: false,
                                timer: 3000
                            })
                            window.location.href = '@Url.Action("Index", "HasilSidang")';
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: result.toString(),
                                showConfirmButton: false,
                                timer: 3000
                            })
                        }
                    },
                    error: function (errormessage) {
                        Swal.fire({
                            icon: 'error',
                            title: result.toString(),
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }
                });
            },
            error: function (err) {
                Swal.fire({
                    icon: 'error',
                    title: result.toString(),
                    showConfirmButton: false,
                    timer: 3000
                })
            }
        });
    }
</script>